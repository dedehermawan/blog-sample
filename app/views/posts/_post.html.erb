<div class="col-md-6 col-lg-4">
  <div class="card">
    <div class="card-topper" style="background-image: url(<%= post.banner_image_url %>);"></div>
    <div class="card-block">
      <div class="card-title"><%= link_to post.title, post_path(post) %></div>
      <p class="published-date"><%= post.display_day_published %></p>
      <p class="card-text"><%= truncate(post.body, length: 130, separator: ' ', :escape => false) %></p>
      <%= link_to 'Read', post_path(post), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
